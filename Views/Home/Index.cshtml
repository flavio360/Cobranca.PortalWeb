<script>
	$(document).ready(function () {
		$(".ajax-link").on("click", function (e) {
			e.preventDefault(); // Impede o redirecionamento padrão

			var url = $(this).attr("href"); // Obtém a URL do link clicado

			$("#container").html("<p>Carregando...</p>"); // Exibe um carregamento enquanto busca os dados

			$.ajax({
				url: url,
				type: "GET",
				success: function (data) {
					console.log(data);
					$("#container").html(data); // Insere o conteúdo recebido na div container
					fecharSidebars(); // Fecha todas as sidebars após carregar o conteúdo
				},
				error: function () {
					$("#container").html("<p>Erro ao carregar a página.</p>");
				}
			});
		});
	});

</script>


