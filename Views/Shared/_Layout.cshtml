<!DOCTYPE html>

<script>
    // ---- NÃO ALTERA CSS/HTML. APENAS FUNÇÕES GLOBAIS SIMPLES ----
    window.abrirSidebar = function(id) {
      // esconde todas as listas laterais
      var listas = document.querySelectorAll('.SideBar');
      for (var i = 0; i < listas.length; i++) {
        listas[i].style.display = 'none';
      }

      // mostra a lista pedida
      var alvo = document.getElementById(id);
      if (alvo) {
        alvo.style.display = 'block';
        alvo.scrollTop = 0;
      }
    };

    window.fecharSidebars = function() {
      var listas = document.querySelectorAll('.SideBar');
      for (var i = 0; i < listas.length; i++) {
        listas[i].style.display = 'none';
      }
    };
</script>


