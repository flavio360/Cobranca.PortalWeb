        // Detecta se a página atual é /Login/Index
        var rd = ViewContext.RouteData.Values;
        var ctrl = (rd["controller"]?.ToString() ?? "");
        var act = (rd["action"]?.ToString() ?? "");

        var isLoginPage =
                string.Equals(ctrl, "Login", StringComparison.OrdinalIgnoreCase) &&
                string.Equals(act, "Index", StringComparison.OrdinalIgnoreCase);

